<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#f0f0f5" />
            <gradient
                android:startColor="#ececf9"
                android:endColor="#d9d9f2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#d9d9f2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>