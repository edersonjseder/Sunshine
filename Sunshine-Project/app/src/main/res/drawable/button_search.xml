<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button layout style -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#9f9fdf" />
            <stroke
                android:width="1dp"
                android:color="#7979d2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#9f9fdf"
                android:endColor="#7979d2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7979d2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

</selector>