<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Text View Tilte Style -->
    <style name="text_title">
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff29549f</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Text View Label Style -->
    <style name="text_label">
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff29549f</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Text View Table Label Style -->
    <style name="text_label_table">
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#e6e6ff</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Text View Info Country/City Label Style -->
    <style name="text_label_info_city_country">
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0000e6</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Button Style -->
    <style name="button_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#ffffff</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >4dp</item>
        <item name="android:textSize" >10dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>

    <!-- Edit Text Style -->
    <style name="edit_text_style" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >4dp</item>
        <item name="android:textSize" >5dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>

</resources>
